{
    "name": "comet-brevo-module-demo",
    "private": true,
    "scripts": {
        "build": "pnpm recursive run build",
        "clean": "pnpm recursive run clean",
        "dev:demo": "dotenv -c -- dev-pm start @demo",
        "dev:demo:admin": "dotenv -c -- dev-pm start @demo-admin",
        "dev:demo:api": "dotenv -c -- dev-pm start @demo-api",
        "dev:demo:site": "dotenv -c -- dev-pm start @demo-site",
        "postinstall": "husky install",
        "lint": "pnpm recursive run lint",
        "lint:eslint": "pnpm recursive run lint:eslint",
        "lint:tsc": "pnpm recursive run lint:tsc",
        "intl:extract": "formatjs extract \"src/**/*.ts*\" --ignore ./**.d.ts --out-file lang-extracted/en.json --format simple"
    },
    "devDependencies": {
        "@comet/dev-process-manager": "^2.0.0",
        "dotenv-cli": "^6.0.0",
        "husky": "^7.0.1",
        "lint-staged": "^11.1.1",
        "npm-run-all": "^4.1.5",
        "open-cli": "^7.0.0",
        "prettier": "^2.3.2",
        "ts-node": "^10.5.0"
    }
}
